process {
    withLabel:'analysis_parser|cdd_runner|get_orfs|hmmer_runner|hmmer_2_runner|io|prosite_pfscan_runner|prosite_pfsearch_runner' {
        container = 'interproscan6'
        memory = { 2.GB * task.attempt }
        time = { 2.hour * task.attempt }
    }
    withLabel:mobidb_runner {
        container = 'idpred'
        memory = { 2.GB * task.attempt }
        time = { 2.hour * task.attempt }
    }
    withLabel:signalp_runner {
        container = 'signalp6'
        memory = { 8.GB * task.attempt }
        time = { 2.hour * task.attempt }
    }
}

docker {
    enabled = true
    mountFlags = 'Z'
}
