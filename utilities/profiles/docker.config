process {
    withLabel:ips6_container {
        container = 'docker.io/interpro/interproscan:6.0.0-alpha'
    }
    withLabel:mobidblite_container {
        container = 'docker.io/matblum/idrpred:1.0.3'
    }
    withLabel:signalp_container {
        container = 'docker.io/matblum/signalp:6.0h'
        containerOptions = params.signalpGPU ? '--nv' : ''
    }
}

docker {
    enabled = true
    mountFlags = 'Z'
    pullTimeout = '3 hours'  // the default is 20 minutes and fails with large images
}
