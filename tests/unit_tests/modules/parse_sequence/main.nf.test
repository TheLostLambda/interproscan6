nextflow_process {

    name "Test Process PARSE_SEQUENCE"
    script "interproscan/modules/parse_sequence/main.nf"
    process "PARSE_SEQUENCE"

    stage {
        symlink "interproscan/scripts/parse_sequence/parse_sequence.py"
        copy "tests/unit_tests/test_inputs/parse_sequences/allowed.faa"
    }

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = file("meta/tests/unit_tests/test_inputs/parse_sequences/allowed.faa")
                input[1] = file("meta/tests/unit_tests/test_inputs/parse_sequences/allowed.faa")
                input[2] = "false"
                input[3] = "antifam,sfld"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should detect illegal characters and crash") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = file("meta/tests/unit_tests/test_inputs/parse_sequences/illegal.faa")
                input[1] = file("meta/tests/unit_tests/test_inputs/parse_sequences/illegal.faa")
                input[2] = "false"
                input[3] = "antifam,sfld"
                """
            }
        }

        then {
            assert process.failed
            assert process.exitStatus == 1
        }

    }

}
