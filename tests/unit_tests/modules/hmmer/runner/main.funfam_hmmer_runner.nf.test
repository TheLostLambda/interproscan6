nextflow_process {

    name "Test Process FUNFAM_HMMER_RUNNER"
    script "interproscan/modules/hmmer/runner/main.nf"
    process "FUNFAM_HMMER_RUNNER"

    stage {
        copy "tests/unit_tests/test_inputs/hmmer_runner/hmmer_runner_fasta.faa"
        copy "tests/unit_tests/test_inputs/hmmer_runner/mock_hmm.hmm"
        copy "tests/unit_tests/test_inputs/hmmer_runner/cathSuperfamilies"
    }

    test("Should run without failures") {

        when {
            params {}
            process {
                """
                input[0] = [
                    file("../../../meta/tests/unit_tests/test_inputs/hmmer_runner/hmmer_runner_fasta.faa"),
                    "unit-test",
                    file("../../../meta/tests/unit_tests/test_inputs/hmmer_runner/mock_hmm.hmm"),
                    ["switch"],
                    []
                ]
                input[1] = file("tests/unit_tests/test_inputs/hmmer_runner/cathSuperfamilies")
                input[2] = "funfam"
                input[3] = true
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
