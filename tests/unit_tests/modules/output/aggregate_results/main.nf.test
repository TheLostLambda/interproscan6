nextflow_process {

    name "Test Process AGGREGATE_RESULTS"
    script "interproscan/modules/output/aggregate_results/main.nf"
    process "AGGREGATE_RESULTS"

    stage {
        copy "interproscan/scripts/output/aggregate_results.py"
        copy "tests/unit_tests/test_inputs/aggregate_results/cdd_matches.json"
        copy "tests/unit_tests/test_inputs/aggregate_results/hamap_matches.json"
    }

    test("Should pass") {

        when {
            params {
            }
            process {
                """
                input[0] = ["../../../meta/tests/unit_tests/test_inputs/aggregate_results/cdd_matches.json", "../../../meta/tests/unit_tests/test_inputs/aggregate_results/hamap_matches.json"]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
